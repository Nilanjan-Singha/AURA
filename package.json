{
  "name": "aura",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "install": "npm install --prefix backend && npm install --prefix frontend",
    "dev": "concurrently \"npm run dev --prefix backend\" \"npm run dev --prefix frontend\"",
    "build": "npm run build --prefix frontend",
    "start": "node backend/index.js"
  },
  "dependencies": {
    "concurrently": "^8.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.4",
    "ultracite": "^6.3.2",
    "vite": "^7.1.7"
  }
}
